<body>

  <div id="contenedor"></div>

  <script>
  // JSON con los datos de prueba
  const data = [
    {
      "titulo": "Robin Hood",
      "imagen": "https://image.tmdb.org/t/p/w600_and_h900_bestv2/3teWChNzKJdbfen46IdeKTygdZa.jpg",
      "descripcion": "Serie que reimagina la leyenda de Robin Hood, con un enfoque moderno del forajido que roba a los ricos para dárselo a los pobres y la historia de amor entre él y Marian.",
      "enlace": "https://cinenube.github.io/CineNubeGallery/Robin-Hood"
    }
  ];

  // Mostrar datos en el HTML
  const contenedor = document.getElementById('contenedor');
  data.forEach(item => {
    contenedor.innerHTML += `
      <div class="card">
        <img src="${item.imagen}" alt="${item.titulo}">
        <h2>${item.titulo}</h2>
        <p>${item.descripcion}</p>
        <a href="${item.enlace}" target="_blank">Ver más</a>
      </div>
    `;
  });
  </script>

